        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.RestaurantTableDetailActivity"></activity>
        <activity android:name=".Activity.ProceedOrderActivity" />
        <activity android:name=".Activity.SearchResultActivity" />
        <activity android:name=".Activity.OrderActivity" />
        <activity android:name=".Activity.RestaurantDetailActivity" />
        <activity android:name=".Activity.PickTableActivity" />
        <activity android:name=".Activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.UserActivity" />
        <activity
            android:name=".Activity.AddMenuActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activity.RestaurantActivity"
            android:label="@string/title_activity_resto_dashboard" />
        <activity android:name=".Activity.RestaurantRegistrationActivity" />
        <activity android:name=".Activity.UserRegistrationActivity" />
        <activity android:name=".Activity.LoginActivity" />
