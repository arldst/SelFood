<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_margin="12dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="120dp"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/food_pic_container_order"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/food_pic_order"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_food"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/food_name_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/food_pic_container_order"
            android:text="Nama Makanan"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/food_description_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/food_name_order"
            android:layout_toEndOf="@+id/food_pic_container_order"
            android:text="@string/deskripsi_makanan"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginRight="10dp"
            android:textSize="10sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/food_price_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/harga_makanan"
            android:layout_toEndOf="@+id/food_pic_container_order"
            android:layout_below="@id/food_name_order"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="56dp" />

        <Button
            android:id="@+id/addOrderBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_baseline_add"
            android:backgroundTint="@color/colorRed"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/item_order_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/addOrderBtn"
            android:text="@string/_0"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/removeOrderBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_baseline_remove"
            android:backgroundTint="@color/colorRed"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/item_order_count"
            android:layout_margin="10dp"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>