<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            
        <TextView
            android:id="@+id/table_number_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nomor_meja"
            android:textSize="10sp"
            android:layout_above="@+id/table_number"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/table_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/table_number_placeholder"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/table_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table_number"
            android:text="Status"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp" />

        <View
            android:id="@+id/table_status_indicator"
            android:layout_width="70dp"
            android:layout_height="5dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/table_status"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background_available"/>
        
    </RelativeLayout>
</androidx.cardview.widget.CardView>